<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/frame250"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_background_small"
    android:padding="@dimen/margin8"
    android:elevation="8dp">

    <TextView
        android:id="@+id/tv_user_age_in_drawer"
        style="@style/tv_in_drawer_header"
        android:text="User age"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_user_name_in_drawer"
        app:layout_constraintStart_toStartOf="@id/tv_user_name_in_drawer"
        />

    <TextView
        android:id="@+id/tv_user_name_in_drawer"
        style="@style/tv_in_drawer_header"
        android:layout_marginBottom="@dimen/margin8"
        android:text="@string/user_name"
        app:layout_constraintBottom_toTopOf="@id/tv_user_age_in_drawer"
        app:layout_constraintStart_toStartOf="@id/user_pic_in_drawer"
        />

    <ImageView
        android:id="@+id/user_pic_in_drawer"
        android:layout_width="@dimen/ic120"
        android:layout_height="@dimen/ic120"
        android:layout_marginBottom="@dimen/margin8"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_name_in_drawer"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_person_24"
        android:layout_marginStart="@dimen/margin8"
        />
</androidx.constraintlayout.widget.ConstraintLayout>