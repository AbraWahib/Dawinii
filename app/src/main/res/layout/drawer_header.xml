<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:elevation="8dp">

    <TextView
        android:id="@+id/tv_user_name_in_drawer"
        style="@style/tv_in_drawer_header"
        android:text="@string/user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        android:fontFamily="@font/mada_bold"
        android:textSize="28sp"
        android:textColor="@color/primaryColor"/>

    <ImageView
        android:id="@+id/user_pic_in_drawer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tv_user_name_in_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_circle"
        android:contentDescription="@string/profile_picture" />
</androidx.constraintlayout.widget.ConstraintLayout>