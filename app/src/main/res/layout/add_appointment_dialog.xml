<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_doctor_name"
        style="@style/routine_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/doctor_name"
        android:textSize="15sp"
        android:textColorHint="#eee"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appointment_date"
        style="@style/buttons_in_add_routine_fragment"
        android:layout_width="0dp"
        android:text="@string/appointment_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_doctor_name"
        android:layout_marginTop="5dp"
        android:textAllCaps="false" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appointment_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/buttons_in_add_routine_fragment"
        android:text="@string/appointment_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointment_date"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appointment_time"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/submit"
        android:background="@drawable/outline_btn"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/manjari_bold"
        android:textAllCaps="false"
        android:textColor="@color/primaryColor"/>


</androidx.constraintlayout.widget.ConstraintLayout>
