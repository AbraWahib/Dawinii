<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="sign_up">
        <item name="android:textSize">46.52sp</item>
        <item name="android:textColor">#257044</item>
    </style>
    <style name="login">
        <item name="android:textSize">116.29sp</item>
        <item name="android:textColor">#257044</item>
    </style>

    <style name="et">
        <item name="android:layout_marginTop" >5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/manjari_regular</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#4702013E</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="radio_btn">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/manjari_regular</item>
        <item name="android:paddingStart">8dp</item>
    </style>
    <style name="routine_et">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/routine_et_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">0dp</item>

    </style>
    <style name="button">
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="tabs">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/mada_bold</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/mada_regular</item>
    </style>
    <style name="toolbar_title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/mada_bold</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>
    <style name="Widget.MaterialComponents.FloatingActionButton.myfab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="Widget.MaterialComponents.FloatingActionButton.myfab.secondary">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:visibility">invisible</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="fab_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="android:fontFamily">@font/mada_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="buttons_in_add_routine_fragment">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:background">@drawable/routine_et_bg</item>
        <item name="android:drawableEnd">@drawable/baseline_arrow_drop_down_24</item>
    </style>
    <style name="tv_in_drawer_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mada_regular</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
