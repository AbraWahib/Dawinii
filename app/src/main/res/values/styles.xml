<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="sign_up">
        <item name="android:textSize">@dimen/size_xxlarge</item>
        <item name="android:textColor">#257044</item>
    </style>
    <style name="login">
        <item name="android:textSize">116.29sp</item>
        <item name="android:textColor">#257044</item>
    </style>

    <style name="et">
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/manjari_regular</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#4702013E</item>
    </style>
    <style name="radio_btn">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:layout_margin">@dimen/margin16</item>
        <item name="android:buttonTint">@color/primaryColor</item>
    </style>
    <style name="routine_et">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/routine_et_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin16</item>
        <item name="android:layout_width">0dp</item>

    </style>
    <style name="button">
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginVertical">@dimen/margin16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="tabs">
        <item name="android:textSize">@dimen/tabSize</item>
        <item name="android:fontFamily">@font/mada_bold</item>

    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/mada_regular</item>
    </style>
    <style name="toolbar_title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:fontFamily">@font/mada_bold</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>
    <style name="Widget.MaterialComponents.FloatingActionButton.myfab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin16</item>
        <item name="android:backgroundTint">@color/thirdColor</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="Widget.MaterialComponents.FloatingActionButton.myfab.secondary">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:visibility">invisible</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="fab_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin16</item>
        <item name="android:fontFamily">@font/mada_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="buttons_in_add_routine_fragment">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:background">@drawable/routine_et_bg</item>
        <item name="android:drawableEnd">@drawable/baseline_arrow_drop_down_24</item>
    </style>
    <style name="tv_in_drawer_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mada_regular</item>
        <item name="android:textSize">@dimen/size_large</item>
    </style>
    <style name="items_in_drawer">
        <item name="android:fontFamily">@font/manjari_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="profile_toolbar_title">
        <item name="android:fontFamily">@font/mada_bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="card_in_history" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">#49A81E</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
